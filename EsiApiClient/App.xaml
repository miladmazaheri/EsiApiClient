<Application x:Class="EsiApiClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EsiApiClient"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <FontFamily x:Key="Vazir">pack://application:,,,/Fonts/#Vazir</FontFamily>

        <Style x:Key="AppWindow" TargetType="Window">
            <Setter Property="Height" Value="768" />
            <Setter Property="Width" Value="1368" />
            <Setter Property="WindowStyle" Value="None" />
            <!--<Setter Property="WindowState" Value="Maximized" />-->
        </Style>
        <Style x:Key="AppTxt" TargetType="TextBox">
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="28" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="#00000000" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>


    </Application.Resources>
</Application>
